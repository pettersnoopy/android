<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_10dp"
        android:orientation="horizontal">
        
        <com.egeio.common.view.NetworkedCacheableImageView android:id="@+id/icon"
            style="@style/icon_smaill"
            android:layout_gravity="left|center_vertical"/>
        
        <LinearLayout style="@style/match_width"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/common_10dp"
            android:orientation="vertical">
            
            <TextView android:id="@id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Text.Body.font"
                android:text="高贵的管理员"/>
            
            <LinearLayout android:id="@id/content"
                style="@style/match_width">
                
            </LinearLayout>
            
            <TextView android:id="@id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Text.Body.font"
                android:text="刚刚"/>
            
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>
