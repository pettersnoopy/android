<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titlebar_height"
    android:background="@color/bg_title_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@id/icon_left_1"
            android:layout_width="@dimen/titlebar_icon_width"
            android:layout_height="@dimen/titlebar_icon_height"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_10dp" />

        <ImageView
            android:id="@id/icon_left_2"
            android:layout_width="@dimen/titlebar_icon_width"
            android:layout_height="@dimen/titlebar_icon_height"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="@dimen/titlebar_height"
        android:layout_centerInParent="true"
        android:gravity="center" >

        <Button
            android:id="@id/titlebar_opt_name"
            style="@style/HeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@id/icon_right_1"
            android:layout_width="@dimen/titlebar_icon_width"
            android:layout_height="@dimen/titlebar_icon_height"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/common_10dp" />

        <ImageView
            android:id="@id/icon_right_2"
            android:layout_width="@dimen/titlebar_icon_width"
            android:layout_height="@dimen/titlebar_icon_height"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/common_10dp" />
    </LinearLayout>

</RelativeLayout>